<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvID_item"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:text="-1"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCategory_item"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Empty"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvDifficulty_item"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:text="-1"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvQuestion_item"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:text="-1"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/tvAnswertext1_item"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:text="Empty"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/tvAnswertext2_item"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:text="Empty"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/tvAnswertext3_item"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:text="Empty"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/tvAnswertext4_item"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:text="Empty"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/tvCorrectAnswer_item"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:text="-1"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
</LinearLayout>